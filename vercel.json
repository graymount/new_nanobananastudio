{
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install --frozen-lockfile",
  "framework": "nextjs",
  "build": {
    "env": {
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "functions": {
    "api/**": {
      "maxDuration": 30
    },
    "api/ai/**": {
      "maxDuration": 120
    },
    "api/payment/**": {
      "maxDuration": 60
    },
    "api/storage/**": {
      "maxDuration": 30
    }
  },
  "crons": []
}
